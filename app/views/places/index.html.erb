<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <%= image_tag 'slider6.jpg', class: 'img-responsive' %>
      <div class="carousel-caption">
        Find the best brunch in town
      </div>
    </div>
    <div class="item">
      <%= image_tag 'slider9.jpg', class: 'img-responsive' %>
      <div class="carousel-caption">
        Looking for drinks?
      </div>
    </div>
    <div class="item">
      <%= image_tag 'slider7.jpg', class: 'img-responsive' %>
      <div class="carousel-caption">
        That perfect spot to relax
      </div>
    </div>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>

<% @places.each do |place| %>

  <div class="booyah-box col-xs-10 col-xs-offset-1">
    <h1><%= link_to place.name, place_path(place) %></h1><br />
    <i><%= place.address %></i><br /><br />

    <% if place.photos.present? %>
    <div class="col-xs-3">
      <%= image_tag place.photos.first.picture, class: "img-responsive img-rounded"%>

    </div>
    <% end %>

    <div class="col-xs-9">
      <%= place.description %>
      <% if place.user.present? %>
      <p>
        <br/>
      <small><%= place.user.email %></small>
      </p>
      <% end %>
    </div>  

    <% if place.comments.present? %>
      <div class="col-xs-12">
        <blockquote>
          <% if place.comments.last.humanized_rating.present? %>
            <b><%= place.comments.last.humanized_rating %></b> 
            -
          <% end %>
          <%= place.comments.last.message %>
          <small><%= place.comments.last.user.email %></small>
        </blockquote>
      </div>
    <% end %>
  </div>
<% end %>

<br style="clear:both;" />
<div class="text-center">
  <%= paginate @places %>
</div>